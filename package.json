
{
  "name": "thassos-enterprise",
  "version": "1.5.0",
  "main": "electron-main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron-start": "electron .",
    "build-client": "vite build && electron-builder",
    "build-server": "pkg server/server.js --targets node18-win-x64 --out-path builds/server"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.6.3",
    "pkg": "^5.8.1",
    "vite": "^4.4.5"
  },
  "build": {
    "appId": "com.thassos.management",
    "productName": "ThassosClient",
    "directories": {
      "output": "builds/client"
    },
    "win": {
      "target": "portable"
    }
  }
